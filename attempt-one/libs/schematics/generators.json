{
  "$schema": "http://json-schema.org/schema",
  "name": "schematics",
  "version": "0.0.1",
  "generators": {
    "init": {
      "factory": "./src/generators/init/generator",
      "schema": "./src/generators/init/schema.json",
      "description": "Init Angular Three with proper packages and config"
    },
    "three": {
      "factory": "./src/generators/three/generator",
      "schema": "./src/generators/three/schema.json",
      "description": "(internal) Generate THREE entities"
    }
  },
  "schematics": {
    "ng-add": {
      "factory": "./src/generators/init/compat",
      "schema": "./src/generators/init/schema.json",
      "description": "Add Angular Three with proper packages and config"
    },
    "three": {
      "factory": "./src/generators/three/compat",
      "schema": "./src/generators/three/schema.json",
      "description": "(internal) Generate THREE entities"
    }
  }
}
