{
    "name": "core-schematics",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/core/schematics/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/core/schematics",
                "main": "packages/core/schematics/src/index.ts",
                "tsConfig": "packages/core/schematics/tsconfig.lib.json",
                "assets": [
                    "packages/core/schematics/*.md",
                    {
                        "input": "./packages/core/schematics/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/core/schematics/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/core/schematics",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./packages/core/schematics",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/core/schematics/**/*.ts",
                    "packages/core/schematics/generators.json",
                    "packages/core/schematics/executors.json",
                    "packages/core/schematics/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/core/schematics/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
