{
  "name": "soba",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/soba/src",
  "prefix": "ngts",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/soba/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/soba/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/soba/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/soba/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/soba/**/*.ts",
          "packages/soba/**/*.html",
          "packages/soba/loaders/**/*.ts",
          "packages/soba/loaders/**/*.html",
          "packages/soba/cameras/**/*.ts",
          "packages/soba/cameras/**/*.html",
          "packages/soba/misc/**/*.ts",
          "packages/soba/misc/**/*.html",
          "packages/soba/controls/**/*.ts",
          "packages/soba/controls/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
