{
    "name": "soba",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "packages/soba/src",
    "prefix": "soba",
    "targets": {
        "build": {
            "executor": "@nrwl/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "packages/soba/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "packages/soba/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "packages/soba/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/soba/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "packages/soba/**/*.ts",
                    "packages/soba/**/*.html",
                    "packages/soba/controls/**/*.ts",
                    "packages/soba/controls/**/*.html",
                    "packages/soba/abstractions/**/*.ts",
                    "packages/soba/abstractions/**/*.html"
                ]
            }
        },
        "storybook": {
            "executor": "@storybook/angular:start-storybook",
            "options": {
                "port": 4400,
                "configDir": "packages/soba/.storybook",
                "browserTarget": "soba:build-storybook",
                "compodoc": false
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@storybook/angular:build-storybook",
            "outputs": ["{options.outputDir}"],
            "options": {
                "outputDir": "dist/storybook/soba",
                "configDir": "packages/soba/.storybook",
                "browserTarget": "soba:build-storybook",
                "compodoc": false
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        }
    },
    "tags": []
}
