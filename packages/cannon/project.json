{
  "name": "cannon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/cannon/src",
  "prefix": "ngtc",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/cannon/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/cannon/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/cannon/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/cannon/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/cannon/**/*.ts",
          "packages/cannon/**/*.html",
          "packages/cannon/debug/**/*.ts",
          "packages/cannon/debug/**/*.html",
          "packages/cannon/services/**/*.ts",
          "packages/cannon/services/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
