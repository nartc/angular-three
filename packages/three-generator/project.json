{
    "name": "three-generator",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/three-generator/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/three-generator",
                "main": "packages/three-generator/src/index.ts",
                "tsConfig": "packages/three-generator/tsconfig.lib.json",
                "assets": [
                    "packages/three-generator/*.md",
                    {
                        "input": "./packages/three-generator/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/three-generator/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/three-generator",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./packages/three-generator",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/three-generator/**/*.ts",
                    "packages/three-generator/generators.json",
                    "packages/three-generator/executors.json",
                    "packages/three-generator/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/three-generator/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
