{
    "projectType": "library",
    "root": "libs/soba",
    "sourceRoot": "libs/soba/src",
    "prefix": "ngt",
    "targets": {
        "build": {
            "executor": "@nrwl/angular:package",
            "outputs": ["dist/libs/soba"],
            "options": {
                "project": "libs/soba/ng-package.json",
                "updateBuildableProjectDepsInPackageJson": false
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/soba/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/soba/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/libs/soba"],
            "options": {
                "jestConfig": "libs/soba/jest.config.js",
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "libs/soba/src/**/*.ts",
                    "libs/soba/src/**/*.html",
                    "libs/soba/controls/**/*.ts",
                    "libs/soba/controls/**/*.html",
                    "libs/soba/cameras/**/*.ts",
                    "libs/soba/cameras/**/*.html",
                    "libs/soba/loaders/**/*.ts",
                    "libs/soba/loaders/**/*.html",
                    "libs/soba/misc/**/*.ts",
                    "libs/soba/misc/**/*.html",
                    "libs/soba/performances/**/*.ts",
                    "libs/soba/performances/**/*.html",
                    "libs/soba/staging/**/*.ts",
                    "libs/soba/staging/**/*.html",
                    "libs/soba/abstractions/**/*.ts",
                    "libs/soba/abstractions/**/*.html"
                ]
            }
        },
        "publish": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "command": "npm publish",
                "cwd": "dist/libs/soba"
            }
        },
        "storybook": {
            "executor": "@nrwl/storybook:storybook",
            "options": {
                "uiFramework": "@storybook/angular",
                "port": 4400,
                "config": {
                    "configFolder": "libs/soba/.storybook"
                },
                "projectBuildConfig": "soba:build-storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nrwl/storybook:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "uiFramework": "@storybook/angular",
                "outputPath": "libs/documentations/build/soba",
                "config": {
                    "configFolder": "libs/soba/.storybook"
                },
                "projectBuildConfig": "soba:build-storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        }
    },
    "tags": ["scope:soba"]
}
